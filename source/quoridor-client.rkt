; read host-adress from file
(define host-adress
  (first (string-split (with-input-from-file "host-adress.txt"
                         (lambda () (read-string 150))))))

; read host-port from file
(define custom-port
  (string->number(second (string-split (with-input-from-file "host-adress.txt"
                                         (lambda () (read-string 150)))))))

;game handling via big-bang
(define (create-world)
  (big-bang new-game-2
    [to-draw render-state]
    [on-mouse mouse-action]
    [on-tick update-frame-and-anim-states]
    [on-key key-press]
    [register host-adress]
    [port custom-port]
    [state #f]
    [on-receive receive]
    [name "Quoridor"]
    )
  )

; start a session
(create-world)
